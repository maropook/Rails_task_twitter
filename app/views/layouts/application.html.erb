<!DOCTYPE html>
<html>
  <head>
    <title>rails課題</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body  class="twitter-container">

  <span class="farmily" >
    <header class="container farmily">
        <a class="icon"><img src="/assets/farmily_logo.png" class="smile" alt=""></a>
        <%# <a class="icon"><img src="/assets/clova_logo.png" class="notification" alt=""></a>
      %>
    <div id="header">
        <div class="hamburger-menu">
        <input type="checkbox" id="menu-btn-check">
        <label for="menu-btn-check" class="menu-btn"><span></span></label>
        <!--ここからメニュー-->
        <div class="menu-content">
            <ul>
      <nav class="farmily">
  
          <% if user_signed_in? %>
          <li>
            <%= link_to current_user.username, pages_show_path %>
          </li>
              <li>
              <a href="https://iken-pro.github.io/iken_webpage/">あいけんWebページ</a>
              </li>
               <li>
                 <li>
            <%= link_to "ホームへ戻る", posts_path %>
              </li>
            <%= link_to 'far-milyトップへ',pages_farmily_path%>
              </li>
               <li>
            <%= link_to 'far-mily使い方',pages_howtofarmily_path%>
              </li>
               <li>
            <%= link_to "マイページへ", user_path(current_user.id) %>
              </li>
               <li>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
              </li>
               <li>
            <%= link_to "ユーザー一覧へ", users_path %>
              </li>
               <li>
            <%= link_to "DM一覧", rooms_path %>
              </li>
             <li>
            <%= link_to 'プロフィール変更', edit_user_registration_path %>
              </li>
                <li>
            <%= link_to 'eechトップページへ',pages_eech_path%>
              </li>

          <% else %>
                <li>
                     <%= link_to 'サインアップ', new_user_registration_path %>
                </li>
                <li>
                      <%= link_to 'ログイン', new_user_session_path %>
                </li>
                <li>
              <a href="https://iken-pro.github.io/iken_webpage/">あいけんWebページ</a>
              </li>

                <% end %>
 
               
            </ul>
        </div>
        <!--ここまでメニュー-->
    </div>
    </div>
     </nav>
   
    </header>

      

    <div class="notice_alert">
    <span class="notice"><%= notice %></span>
    <span class="alert"><%= alert %></span>
    </div>
   
    </span>
    <!-- ここに追加 -->
 
    <%= yield %>
  </body>
</html>