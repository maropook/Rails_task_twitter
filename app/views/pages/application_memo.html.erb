.farmily{
/* Form Layout */

* {
margin: 0;
padding: 0;
box-sizing: border-box;

nav.farmily{
a{
display: inline-block;
margin-top: 15px;
color: #ffffff;
text-decoration: none;
}
}
}
.my-container {
width: 100%;
background: rgb(239, 230, 230);
}


header, main {
display: block;
}

header {
position: sticky;
z-index: 11;
display: flex;
width:100%;
top: 0;
height: 48px;
background-color: #fd9c9c;
}
header.hid{
z-index: 10;
height: 0px;
}

header .icon, header .service {
position: relative;
top: -1px;
padding: 10px 18px;
text-align: center;
font-size: 1.8rem;
margin-right: 25px;
}

header .icon .white_logo {
