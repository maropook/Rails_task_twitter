@keyframes fadein {
  0% {
    
    opacity: 1
  }
  25% {
    opacity: 1
  }
  50% {
    opacity: 1
  }
  65% {
    
    opacity: 1
  }
  100% {
    opacity: 0;
   
  }
}

.oo {
  animation: fadein 2s forwards;
  -webkit-animation: fadein 2s forwards;
}

p {
  margin: 0;
  position: absolute;
  top: 30%;
  left: 40%;
  margin-right: -50%;
  transform: translate(-50%, -50%);
}

@keyframes rotate-y {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(360deg);
  }
}

@-webkit-keyframes rotate-y {
  0% {
    -webkit-transform: rotateY(0deg);
  }
  100% {
    -webkit-transform: rotateY(360deg);
  }
}

.oo {
  animation: rotate-y 2s infinite, fadein 2s forwards;
  -webkit-animation: rotate-y 2s infinite, fadein 2s forwards;
}

.load{
      background-color: #fd9c9c;

  position: sticky;
  margin-top:-4px;
  top: 40px;
  left: 0;
  width: 100%;
  z-index: 100;
  height: 1000px;
  color: aliceblue;
 
  animation:  fadein 2s forwards;
  -webkit-animation:fadein 2s forwards;

}
</style>
</head>
<body >
    <div class="load">
    <p class="oo"><img src="/assets/clova_logo.png"></p>
    </div>

    <h1>ああああ</h1>
   
</body>
