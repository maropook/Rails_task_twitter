<div id="twitter_post">
  <h2>ユーザー詳細ページ</h2>
  <div class="twiit">
    <div class="twitter">
      <h2><img src=<%= @user.image %> class="icon_image"><%= @user.username %></h2>
      <td>フォロー: <%= @user.followings.count %></td>
      <td>フォロワー: <%= @user.followers.count %></td>
    </div>
  </div>
  <% if current_user.following?(@user) %>
  <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
  <%= link_to "フォロー", user_relationships_path(@user.id), method: :post %>
  <% end %>
  <%= link_to "フォロワー一覧", user_followers_path(@user.id)%>
  <%= link_to "フォロー一覧", user_followings_path(@user.id)%>
  <h2>投稿内容</h2>
  <% @user.posts.reverse_each do |post| %>
  <div class="twiit">
    <div class="twitter">
      <div class="user"><img src=<%= post.user.image %> class="icon_image"><strong><a class="user_name"
            href="/users/<%= post.user.id %>"><%= post.user.username %></a></strong></div>
      <p class="comment_bottom"> <a class="comment" href="/posts/<%= post.id %>"><%= post.content %></a></p>
      <p>
        <% if post.image?%>
        <strong>Image:</strong>
        <div class="thumbnail">
          <div class="post_images"><img src=<%= post.image.url %> class="post_image"></div>
        </div>
        <% end %>
      </p>
      <p class="favorite">いいね数(<%= post.liked_users.count %>)</p>
      <% if post.user.id == current_user.id%>
      <td><%= link_to "編集", edit_post_path(post) %></td>　　　　　　　
      <td><%= link_to "削除", post_path(post), method: :delete %></td>
      <% end %>
    </div>
  </div>
  <% end %>
  <h2>いいねしている投稿</h2>
  <% @user.liked_posts.each do |post| %>
  <div class="twiit">
    <div class="twitter">
      <div class="user"><img src=<%= post.user.image %> class="icon_image"><strong><a class="user_name"
            href="/users/<%= post.user.id %>"><%= post.user.username %></a></strong></div>
      <p class="comment_bottom"> <a class="comment" href="/posts/<%= post.id %>"><%= post.content %></a></p>
    </div>
  </div>
  <% end %>
  <% if @user.id == current_user.id %>
  <% else %>
  <% if @isRoom == true %>
  <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
    <% else %>
    <%= form_for @room do |f| %>
    <%= fields_for @entry do |e| %>
    <%= e.hidden_field :user_id, :value=> @user.id %>
    <% end %>
    <%= f.submit "チャットを始める" %>
    <% end %>
    <% end %>
    <% end %>
    <%= link_to "ユーザー一覧へ", users_path %>
    <%= link_to "ホームへ戻る", posts_path %>
</div>
