<h1>投稿詳細ページ</h1>
<div class="twiit">
<div class="twitter">
<h3><img src=<%= @post.user.image %> class = "icon_image"> <%= @post.user.username %></h3>
<h3 class="comment"><%= @post.content %></h3>
<h4>いいね件数: <%= @post.likes.count %></h4>
<% if current_user.already_liked?(@post) %>
  <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
<% else %>
  <%= button_to 'いいね', post_likes_path(@post) %>
<% end %>
<h4>いいねしたユーザー</h4>
<% @post.liked_users.each do |user| %>
  <p>   <img src=<%= user.image %> class = "icon_image"> <%= user.username %></p>

<% end %>
</div>
</div>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <img src=<%= c.user.image %> class = "icon_image"> <a href="/users/<%= @post.user.id %>"><%= c.user.username %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :post_id, value: @post.id %> 
  <%= f.submit 'コメントする', class: "btn btn-primary" %>
<% end %>
<%= link_to "ホームへ戻る", posts_path %>