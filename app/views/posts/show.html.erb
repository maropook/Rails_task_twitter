<div id="twitter_post">
  <h1>投稿詳細ページ</h1>
  <div class="twiit">
    <div class="twitter">
      <div class="user"><img src=<%= @post.user.image %>
          class="icon_image"><strong><%= @post.user.username %></strong><%= @post.updated_at.to_s(:datetime_jp) %></div>
      <p class="comment_bottom"><%= @post.content %></p>
      <p class="favorite">いいね数(<%= @post.liked_users.count %>)</p>
      <% if current_user.already_liked?(@post) %>
      <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
      <% else %>
      <%= button_to 'いいね', post_likes_path(@post) %>
      <% end %>
      <h4>いいねしたユーザー</h4>
      <% @post.liked_users.each do |user| %>
      <p> <img src=<%= user.image %> class="icon_image"> <%= user.username %></p>

      <% end %>
    </div>
  </div>

  <h2>コメント一覧</h2>
  <% @comments.each do |c| %>
  <div>
    <img src=<%= c.user.image %> class="icon_image"> <a href="/users/<%= @post.user.id %>"><%= c.user.username %></a>
    <%= c.content %>
    <hr>
  </div>
  <% end %>
  <div class="post">
    <%= form_for [@post, @comment],html: { class: "form_for_tweet" } do |f| %>
    <%= f.text_field :content,class:"text_field",placeholder:"いまどうしてる？" %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <br>
    <hr>
    <%= f.submit 'コメントする', class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to "ホームへ戻る", posts_path %>

</div>
